<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta content="IE=edge, chrome=1" http-equiv="X-UA-Compatible" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <title>@ViewBag.Title</title>
     @Styles.Render("~/Content/css")
     @Scripts.Render("~/bundles/modernizr")
</head>
<body data-ng-app="main">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Dezurstvo Asistenti", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", target = "_self"})
            </div>
            <div class="navbar-collapse collapse">
                <!--<ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <!--<li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                </ul>-->
                <ul class="nav navbar-nav">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Prijava", "Login", "Home", new { area = "" }, new { target = "_self" })</li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Kontrolna tabla", "Dashboard", "Home", new { area = "" }, new { target = "_self" })</li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Asistenti", "Asistenti", "Home", new { area = "" }, new { target = "_self" })</li>
                        <li>@Html.ActionLink("Predmeti", "Predmeti", "Home", new { area = "" }, new { target = "_self" })</li>
                        <li>@Html.ActionLink("Sale", "Sale", "Home", new { area = "" }, new { target = "_self" })</li>
                        <li><a href="#">Raspored</a></li>
                        <li><a href="#">Pretraga</a></li>
                        <li><a href="#">Izvestaj</a></li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a href="#"><i class="glyphicon glyphicon-user"></i>Profil</a></li>
                        <li data-ng-controller="logoutViewModel"><a href="#" data-ng-click="userLogout()"><i class="glyphicon glyphicon-log-out"></i>Odjava</a></li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Dezurstvo Asistenata</p>
        </footer>
    </div>
    <!-- 3rd party libraries -->
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/angular-local-storage.js"></script>
    <!--<script src="~/Scripts/loading-bar.js"></script>-->
    @Scripts.Render("~/bundles/bootstrap")

    <!-- Load app main script -->
    <script src="~/App/App.js"></script>

    @RenderSection("scripts", required: false)

    <script type="text/javascript">
    /*@RenderSection("jsCode", required: false)*/
    </script>
    </body>
</html>
